@model SendLogInLinkModel
@{
    ViewBag.Title = "Dołącz do zabawy";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-lg-6">
            <h2>Witaj w Secret Santa!</h2>

            @using (Html.BeginForm("SendLogInLink", "Account", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
            {
                <fieldset>
                    <legend>@ViewBag.Title</legend>

                    <div class="alert alert-success">
                        Jeśli już utworzyłaś(eś) swoje konto wcześniej, zaloguj się <b>klikając w link do logowania znajdujący się w wiadomości email</b> otrzymanej ode mnie.
                    </div>
                    <div>
                        Jeśli nie możesz znaleźć tego maila, lub <b>logujesz się po raz pierwszy</b>, podaj swoje imię i adres e-mail poniżej,
                        po czym sprawdź swoją skrzynkę:
                    </div>

                    <div class="form-group">
                        <small>@Html.LabelFor(m => m.DisplayName, new { @class = "control-label col-sm-4" })</small>
                        <div class="col-sm-6">
                            @Html.EditorFor(m => m.DisplayName)
                            <small>@Html.ValidationMessageFor(m => m.DisplayName)</small>
                        </div>
                    </div>
                    <div class="form-group">
                        <small>@Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-4" })</small>
                        <div class="col-sm-6">
                            @Html.EditorFor(m => m.Email)
                            <small>@Html.ValidationMessageFor(m => m.Email)</small>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Poproszę o wiadomość email z linkiem do logowania</button>
                        </div>
                    </div>
                </fieldset>
            }
        </div>
        <div class="col-lg-6">
            <img class="img-responsive" src="@Url.Content("~/images/santa.png")" alt="Santa" style="max-width: 200px" />
        </div>
    </div>
</div>