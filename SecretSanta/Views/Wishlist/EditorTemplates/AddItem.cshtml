@model WishlistItem
@{
    Layout = "";
    ViewData.TemplateInfo.HtmlFieldPrefix = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("AddItem", "Wishlist", FormMethod.Post, new {role = "form", @class = "form-horizontal"}))
        {
            @Html.AntiForgeryToken()
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Dodawanie</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new {@class = "control-label col-sm-4"})
                    <div class="col-sm-8">
                        @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Name)
                        <div>na przykład: książka, skarpetki</div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Description, new {@class = "control-label col-sm-4"})
                    <div class="col-sm-8">
                        @Html.TextAreaFor(m => m.Description, new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Description)
                        <div>na przykład: konkretny tytuł, rozmiar itp.</div>
                    </div>
                </div>
                <!-- <div class="form-group">
                    @Html.LabelFor(m => m.Url, new {@class = "control-label col-sm-4"})
                    <div class="col-sm-8">
                        @Html.EditorFor(m => m.Url)
                        @Html.ValidationMessageFor(m => m.Url)
                    </div>
                </div> -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Anuluj</button>
                <button type="submit" class="btn btn-primary">Zapisz</button>
            </div>
        }
    </div>
</div>